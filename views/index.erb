<header>
  <h1>Multi Photo Resizer</h1>
</header>

<div id="drop-area">
  <div class="upload-link-wrapper">
    <h2>
      Drop Photos here.
      <input name="file-picker-button" type="file" id="file-picker-button" multiple />
    </h2>
  </div>

  <span class="back-arrow">&laquo;</span>
</div>

<div id="photo-collection">
  <div class="photos-wrapper">

  </div>
</div>

<div id="settings-bar">
  <div class="ratio">
    <label>Ratio:</label>
    <!-- <input id="ratio" type="range" min="0" max="100" step="5" value="40"/> -->
    <input type="number" name="ratio" min="10" step="5" max="100" value="40" />
  </div>

  <div class="button" id="resize-photos-button">
    Resize Photos
  </div>
</div>